{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true, // to be validated
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true, // to be validated
    "isolatedModules": true,
    "jsx": "preserve", // to be validated
    "incremental": true, // to be validated
    "baseUrl": "src",
    "paths": {
      "@root/*": [
        "./*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@provider/*": [
        "./provider/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@layouts/*": [
        "./layouts/*"
      ],
      "@wrappers/*": [
        "./wrappers/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
    }
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
}
